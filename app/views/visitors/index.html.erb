<h1 class="title-of-day">Interview Question For <%= @today_name %></h1>
<br><br>
  <span id = "typer" >&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspWant the Internship from </span>
<span id= "typer-cursor"> </span>
<div class="panel panel-success question-of-day-panel">
  <div class="panel-body">
    <div class="col-md-2">
      <div class="vote chev">
        <div class="increment up">
          <%= link_to "____", question_votes_path(@today_question), method: :post %>
        </div>
        <div class="increment down">
          <% if current_user %>
           <%= link_to " . . . . . . .  ", question_vote_path(@today_question, Vote.where(:question_id => @today_question.id, :user_id => current_user.id)), method: :delete %>
         <% end %>
        </div>
        <div class="count"><p><%= @today_question.vote_count %></p></div>
      </div>
    </div>
    <div class="col-md-10 question-content">
      <p><%= @today_question.content %> </p>
      <%= link_to "Source", @today_question.source_url%>
    </div>
  </div>
</div>



<h1 class="title">Interview Question Of <%= @today_name %></h1>
<br><br>
<div class="typer-container">
  <span id = "typer" >Want the Internship from </span>
  <span id= "typer-cursor"> </span>
</div>
<div class="panel panel-success question-panel">
  <div class="panel-body">
    <div class="col-md-2">
      <div class="vote chev">
        <%= link_to "", question_votes_path(@question), {:method => "post", :class => "increment up hvr-wobble-up"} %>
        <%= link_to "", question_vote_path(@question, Vote.where(:question_id => @question.id, :user_id => current_user)), {:method => "delete",:class => "increment down"} %>
        <div class="count"><p><%= @question.vote_count %></p></div>
      </div>
    </div>
    <div class="col-md-10">
      <p><%= @question.content %> </p>
      <%= link_to "Source", @question.source_url%>
    </div>
  </div>
</div>
<div class="two-buttons-wrapper">
  <% if current_user %>
    <button class="btn btn-lg btn-default favorite-button hvr-sweep-to-right">Favorite</button>
  <% end %>
  <%= link_to questions_path, {:class => "btn btn-default btn-lg get-more-button hvr-sweep-to-right", :method => "get" } do %>
    <i class="fa fa-book"></i> Get More
  <% end %>
</div>

